{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "functions",
    "allowJs": true,
    "typeRoots": ["../node_modules/@types", "../src/types"]
  },
  "include": ["functions/**/*.ts"],
  "exclude": ["node_modules"]
}